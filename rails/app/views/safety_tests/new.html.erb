<h1>Add Safety Test</h1>
<%= form_for @safety_test do |f| %>
  <div class="control-group">
    <%= f.label 'Student' %>
    <input type="hidden" name="student_id" value=<%= params[:student_id] %> />
    <input type="text" value="<%= Student.find(params[:student_id]).full_name %>" disabled />
    <%= f.label :year, class: 'control-label' %>
    <%= f.text_field :year %>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn' %>
  </div>
<% end %>
