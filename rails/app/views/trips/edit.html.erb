<h1>Editing Trip</h1>
<%= form_for @trip do |f| %>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name %>
    <%= f.label :start_date, 'Start Date', class: 'control-label' %>
    <%= f.text_field :start_date %>
    <%= f.label :end_date, 'End Date', class: 'control-label' %>
    <%= f.text_field :end_date %>
    <label class="checkbox">
      <%= f.check_box :requires_teacher_permission_form %> Requires teacher permission form
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_trip_deposit %> Requires trip deposit
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_trip_fee %> Requires trip fee
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_medical_form %> Requires medical form
    </label>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn' %>
  </div>
<% end %>
