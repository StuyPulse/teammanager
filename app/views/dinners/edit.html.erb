<h1>Edit Dinner for <%= @dinner.date.strftime("%A, %b.%d.%y") %> </h1>
<%= form_for @dinner do |f| %>
  <div class="control-group">
    <%= f.label :date, class: "control-label" %>
    <%= f.text_field :date,  id: "datepicker" %>
    <%= f.label :student_id, class: "control-label" %>
    <%= select "dinner", "student_id", [["None", 0]] + Student.all.collect { |s| [s.full_name, s.id] }, {} %>
    <%= f.label :volunteer_name, class: "control-label" %>
    <%= f.text_field :volunteer_name %>
    <%= f.label :volunteer_phone, class: "control-label" %>
    <%= f.text_field :volunteer_phone %>
    <%= f.label :volunteer_email, "Volunteer email (optional)", class: "control-label" %>
    <%= f.text_field :volunteer_email %>
    <%= f.label :meal_description, class: "control-label" %>
    <%= f.text_area :meal_description, rows: "3" %>
    <%= f.label :notes, "Notes (optional)", class: "control-label" %>
    <%= f.text_area :notes, rows: "3" %>
  </div>
  <div class="form-actions">
    <%= f.submit "Save", class: "btn" %>
  </div>
<% end %>
