<% content_for :extra_stylesheets do %>
  <%= stylesheet_link_tag "datepicker.css" %>
<% end %>

<% content_for :extra_javascripts do %>
  <%= javascript_include_tag "bootstrap-datepicker.js" %>
<% end %>

<h1>New Trip</h1>
<%= form_for @trip do |f| %>
  <div class="control-group">
    <%= f.label :name, class: 'control-label' %>
    <%= f.text_field :name %>
    <%= f.label :start_date, 'Start Date', class: 'control-label' %>
    <%= f.text_field :start_date, class: "date" %>
    <%= f.label :end_date, 'End Date', class: 'control-label' %>
    <%= f.text_field :end_date, class: "date" %>
    <label class="checkbox">
      <%= f.check_box :requires_teacher_permission_form %> Requires teacher permission form
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_trip_deposit %> Requires trip deposit
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_trip_fee %> Requires trip fee
    </label>
    <label class="checkbox">
      <%= f.check_box :requires_medical_form %> Requires medical form
    </label>
  </div>
  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn' %>
  </div>
<% end %>
<%= javascript_tag "$('.date').datepicker({ format: 'yyyy-mm-dd' }); " %>
