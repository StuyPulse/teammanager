<% if not @student %>
  <h1>Check your documents </h1>
  <%= form_tag do %>
    <%= label :student, :last_name, "Last Name: " %>
    <%= text_field :student, :last_name, autofocus: :true %>
    <%= label :student, :id, "4-Digit ID: " %>
    <%= text_field :student, :id %>
    <div class="form-actions">
      <%= submit_tag "Submit", class: "btn" %>
    </div>
  <% end %>
<% else %>
  <div class="row">
    <div class="span12">
      <h1><%= @student.full_name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <h2>Student</h2>
      <p><strong>Year:</strong> <%= @student.year %></p>
      <p><strong>ID:</strong> <%= @student.student_id %></p>
      <p><strong>Email:</strong> <%= @student.student_email %></p>
      <p><strong>Cell Phone:</strong> <%= number_to_phone @student.student_cell_phone, area_code: true %></p>
    </div>
    <div class="span6">
      <h2>Parents</h2>
      <p><strong>Mother:</strong> <%= @student.mother_name %></p>
      <p><strong>Father:</strong> <%= @student.father_name %></p>
      <p><strong>Email:</strong> <%= @student.parent_email %></p>
      <p><strong>Home Phone:</strong> <%= number_to_phone @student.parent_home_phone, area_code: true %></p>
      <p><strong>Cell Phone:</strong> <%= number_to_phone @student.parent_cell_phone, area_code: true %></p>
      <p><strong>Preferred Language:</strong> <%= @student.preferred_language %></p>
    </div>
  </div>
  <div class="row">
    <%= render "all_seasonals", read_only: true %>

    <div class="span4">
      <h3>Medical Forms</h3>
      <table class="table" style="margin-top:-20px">
        <tr>
          <th>Date</th>
          <th>Valid?</th>
        </tr>
        <% @student.medical_forms.order('date DESC').each do |medical_form| %>
          <tr class="<%= medical_form.is_valid? ? 'success' : 'error' %>">
            <td><%= medical_form.date %></td>
            <td><%= medical_form.is_valid? ? 'Yes' : 'No' %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <h3>Parent Permission Forms</h3>
      <table class="table" style="margin-top:-20px">
        <tr>
          <th>Trip</th>
        </tr>
        <% @student.parent_permission_forms.each do |form| %>
          <tr>
            <% trip = Trip.find form.trip_id %>
            <td><%= "#{trip.name} (#{trip.start_date.year})" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="span6">
      <h3>Teacher Permission Forms</h3>
      <table class="table" style="margin-top:-20px">
        <tr>
          <th>Trip</th>
        </tr>
        <% @student.teacher_permission_forms.each do |form| %>
          <tr>
            <% trip = Trip.find form.trip_id %>
            <td><%= "#{trip.name} (#{trip.start_date.year})" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="span6">
      <h3>Trip Deposits</h3>
      <table class="table" style="margin-top:-20px">
        <tr>
          <th>Trip</th>
        </tr>
        <% @student.trip_deposits.each do |trip_deposit| %>
          <tr>
            <% trip = Trip.find trip_deposit.trip_id %>
            <td><%= "#{trip.name} (#{trip.start_date.year})" %></td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="span6">
      <h3>Trip Fees</h3>
      <table class="table" style="margin-top:-20px">
        <tr>
          <th>Trip</th>
        </tr>
        <% @student.trip_fees.each do |trip_fee| %>
          <tr>
            <% trip = Trip.find trip_fee.trip_id %>
            <td><%= "#{trip.name} (#{trip.start_date.year})" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>
