%p#notice= notice
.row
  %h1
    = @student.full_name
    - if !@student.preferred_name.empty?
      = "( #{@student.preferred_name} )"
.row
  .col
    %h2 Student Info
    %p
      %strong Graduation Year:
      = "#{@student.grad_year}"
    %p
      %strong OSIS:
      = @student.osis
    %p
      %strong Email:
      = @student.email
    %p
      %strong Phone:
      = @student.phone
    %p
      %strong Team:
      = "#{@student.team.program} #{@student.team.number} #{@student.team.name}"
    = link_to 'Edit', edit_student_path(@student)
  .col
    %h2 Forms
.row
  .col
    %h2 Parent Info
.row
  .col
    %h2 Hours
= link_to 'Back', students_path
