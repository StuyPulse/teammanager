<h1>Students</h1>

<div class="pull-right">
  <%= link_to 'New Student', new_student_path, class: 'btn btn-primary' %>
  <%= link_to 'Export to CSV', params.merge(format: :csv), class: 'btn btn-primary' %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Graduation year</th>
      <th>Osis</th>
      <th>Sark</th>
      <th>Email</th>
      <th>Phone</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.first_name %></td>
        <td><%= student.last_name %></td>
        <td><%= student.graduation_year %></td>
        <td><%= student.osis %></td>
        <td><%= student.sark %></td>
        <td><%= student.email %></td>
        <td><%= number_to_phone(student.phone, area_code: true) %></td>
        <td><%= link_to 'View', student, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
