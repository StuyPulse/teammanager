<%= form_with(model: student, local: true) do |form| %>
  <% if student.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

      <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if current_user&.is_admin %>
    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, id: :student_first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :student_last_name %>
    </div>

    <div class="field">
      <%= form.label :preferred_name %>
      <%= form.text_field :preferred_name, id: :student_preferred_name %>
    </div>

    <div class="field">
      <%= form.label :grad_year %>
      <%= form.number_field :grad_year, id: :student_grad_year %>
    </div>

    <div class="field">
      <%= form.label :osis %>
      <%= form.number_field :osis, id: :student_osis %>
    </div>

    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email, id: :student_email %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone, id: :student_phone %>
    </div>

    <div class="field">
      <%= form.label :team_id %>
      <%= form.text_field :team_id, id: :student_team_id %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% elsif (@user == @record&.user) %>
    <div class="field">
      <%= form.label :preferred_name %>
      <%= form.text_field :preferred_name, id: :student_preferred_name %>
    </div>

    <div class="field">
      <%= form.label :phone %>
      <%= form.text_field :phone, id: :student_phone %>
    </div>

    <div class="field">
      <%= form.label :team_id %>
      <%= form.text_field :team_id, id: :student_team_id %>
    </div>

    <div class="gender">
      <%= form.label :gender %>
      <%= form.text_field :gender, id: :gender %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
<% end %>
