<div class="row">
  <h1><%= @student.full_name %></h1>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Student</h2>

    <p><strong>Graduation year:</strong> <%= @student.graduation_year %></p>
    <p><strong>Osis:</strong> <%= @student.osis %></p>
    <p><strong>Sark:</strong> <%= @student.sark %></p>
    <p><strong>Email:</strong> <%= @student.email %></p>
    <p><strong>Phone:</strong> <%= number_to_phone(@student.phone, area_code: true) %></p>
    <p><strong>Team:</strong> <%= @student.team.try(:display_name) %></p>
  </div>

  <div class="col-md-6">
    <h2>Parent</h2>

    <p><strong>Father name:</strong> <%= @student.father_name %></p>
    <p><strong>Mother name:</strong> <%= @student.mother_name %></p>
    <p><strong>Parent email:</strong> <%= @student.parent_email %></p>
    <p><strong>Parent home phone:</strong> <%= number_to_phone(@student.parent_home_phone) %></p>
    <p><strong>Parent cell phone:</strong> <%= number_to_phone(@student.parent_cell_phone) %></p>
    <p><strong>Parent preferred language:</strong> <%= @student.parent_preferred_language %></p>
  </div>
</div>

<%= link_to 'Edit', edit_student_path(@student) %> |
<%= link_to 'Destroy', @student, method: :delete, data: { confirm: 'Are you sure?' } %>

<div class="row">
  <div class="col-md-4">
    <h2>Safety Tests</h2>
    <table class="table">
      <tbody>
        <tr class="<%= @student.has_valid_safety_test? ? "success" : "danger" %>">
          <td>
            <%= current_year_range %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<%= link_to 'Back', students_path %>
